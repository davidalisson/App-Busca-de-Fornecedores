<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/textViewSolicitaTurno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"
        android:text="Turno:"
        android:textSize="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#585656"
        />

    <Spinner
    android:id="@+id/spinnerSolicitaTurno"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/textViewSolicitaTurno"
    android:layout_below="@+id/textViewSolicitaTurno"
    android:layout_marginRight="10dp"
    ></Spinner>

    <EditText
        android:id="@+id/editSolicitaMsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerSolicitaTurno"
        android:layout_below="@+id/spinnerSolicitaTurno"
        android:paddingTop="20dp"
        android:hint="Mensagem(obrigatÃ³ria)"
        android:layout_marginRight="10dp"
        />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editSolicitaMsg"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:paddingTop="4dp"
        android:layout_marginTop="10dp">



        <Button
            android:id="@+id/btSolicitaCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar"
            android:background="#FFFF"

            />

        <Button
            android:id="@+id/btSolicitaEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enviar"
            android:background="#FFFF"
            android:textColor="#62bc98"
            />

    </LinearLayout>


</RelativeLayout>